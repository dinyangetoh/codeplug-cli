{
  "name": "@codeplug/cli",
  "version": "0.1.0",
  "description": "The source of truth for codebase understanding & governance",
  "type": "module",
  "main": "dist/cli/index.js",
  "bin": {
    "codeplug": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "coverage": "vitest run --coverage",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "codebase",
    "conventions",
    "governance",
    "documentation",
    "cli",
    "ai",
    "ml"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "templates"
  ],
  "dependencies": {
    "commander": "^13.1.0",
    "@inquirer/prompts": "^7.3.2",
    "@babel/parser": "^7.26.9",
    "@babel/traverse": "^7.26.9",
    "@babel/types": "^7.26.9",
    "@huggingface/transformers": "^3.3.3",
    "sql.js": "^1.12.0",
    "simple-git": "^3.27.0",
    "globby": "^14.0.2",
    "zod": "^3.24.2",
    "chalk": "^5.4.1",
    "ora": "^8.2.0",
    "openai": "^4.85.4"
  },
  "devDependencies": {
    "typescript": "^5.7.3",
    "@types/node": "^22.13.4",
    "@types/babel__traverse": "^7.20.6",
    "vitest": "^3.0.5",
    "@vitest/coverage-v8": "^3.0.5",
    "eslint": "^9.20.0",
    "@eslint/js": "^9.20.0",
    "typescript-eslint": "^8.24.1"
  }
}
