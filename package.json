{
  "name": "@dinyangetoh/codeplug-cli",
  "version": "0.1.3",
  "description": "The source of truth for codebase understanding & governance",
  "type": "module",
  "main": "dist/cli/index.js",
  "bin": {
    "codeplug": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "coverage": "vitest run --coverage",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "codebase",
    "conventions",
    "governance",
    "documentation",
    "cli",
    "ai",
    "ml"
  ],
  "author": "David Inyang-Etoh (dinyangetoh)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dinyangetoh/codeplug-cli.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "templates"
  ],
  "dependencies": {
    "commander": "^13.1.0",
    "@inquirer/prompts": "^7.3.2",
    "@babel/parser": "^7.26.9",
    "@babel/traverse": "^7.26.9",
    "@babel/types": "^7.26.9",
    "@huggingface/transformers": "3.8.1",
    "simple-git": "^3.27.0",
    "globby": "^14.0.2",
    "zod": "^3.24.2",
    "chalk": "^5.4.1",
    "ora": "^8.2.0",
    "openai": "6.25.0"
  },
  "devDependencies": {
    "typescript": "^5.7.3",
    "@types/node": "^22.13.4",
    "@types/babel__traverse": "^7.20.6",
    "vitest": "^3.0.5",
    "@vitest/coverage-v8": "^3.0.5",
    "eslint": "^9.20.0",
    "@eslint/js": "^9.20.0",
    "typescript-eslint": "^8.24.1"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
